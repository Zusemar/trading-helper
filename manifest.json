{
    "manifest_version": 3,
    "name": "X.com Tags Manager",
    "description": "Beautiful tag manager for X.com usernames with highlighting functionality",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["https://axiom.trade/pulse", "https://twitter.com/*", "https://x.com/*"], 
      "js": ["content-script.js"]
    }],
    "action": {
        "default_title": "X.com Tags Manager"
    },
    "options_page": "options.html",
    "permissions": ["scripting", "activeTab", "storage", "tabs"],
    "icons": {
        "16": "data:image/svg+xml;base64,",
        "48": "data:image/svg+xml;base64,",
        "128": "data:image/svg+xml;base64,"
    }
}